<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/layout_half_padding"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/layout_half_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_owner"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintBaseline_toTopOf="parent"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id='@+id/iv_repo_name'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@sample/repositories.json/data/name"
            android:layout_marginTop="@dimen/layout_half_padding"
            android:layout_marginStart="@dimen/layout_half_padding"
            android:layout_marginEnd="@dimen/layout_half_padding"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_owner"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id='@+id/iv_repo_description'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_half_padding"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_repo_name"
            app:layout_constraintTop_toBottomOf="@id/iv_repo_name"
            tools:text="@sample/repositories.json/data/description" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_star"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:chipIcon="@drawable/ic_stars"
            app:chipIconTint="#FAFA02"
            tools:text="@sample/repositories.json/data/stargazers_count"
            app:chipBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/iv_repo_name"
            app:layout_constraintTop_toBottomOf="@id/iv_repo_description"/>

        <com.google.android.material.textview.MaterialTextView
            android:id='@+id/iv_repo_language'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constraintEnd_toEndOf="@id/iv_repo_name"
            app:layout_constraintTop_toTopOf="@id/chip_star"
            tools:text="@sample/repositories.json/data/language" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>